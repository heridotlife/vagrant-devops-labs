# Generated by Ansible - Do not edit manually
#############################################################################
# etcd Configuration
#############################################################################

# Member configuration
ETCD_NAME={{ etcd_name }}
ETCD_DATA_DIR={{ etcd_data_dir }}

# Clustering configuration
ETCD_INITIAL_ADVERTISE_PEER_URLS={{ etcd_initial_advertise_peer_urls }}
ETCD_LISTEN_PEER_URLS={{ etcd_listen_peer_urls }}
ETCD_LISTEN_CLIENT_URLS={{ etcd_listen_client_urls }}
ETCD_ADVERTISE_CLIENT_URLS={{ etcd_advertise_client_urls }}
ETCD_INITIAL_CLUSTER_TOKEN={{ etcd_initial_cluster_token }}
ETCD_INITIAL_CLUSTER={{ etcd_initial_cluster }}
ETCD_INITIAL_CLUSTER_STATE={{ etcd_initial_cluster_state }}

# Security configuration
ETCD_CERT_FILE={{ etcd_cert_file }}
ETCD_KEY_FILE={{ etcd_key_file }}
ETCD_TRUSTED_CA_FILE={{ etcd_ca_file }}
ETCD_CLIENT_CERT_AUTH={{ etcd_client_cert_auth | lower }}
ETCD_PEER_CERT_FILE={{ etcd_cert_file }}
ETCD_PEER_KEY_FILE={{ etcd_key_file }}
ETCD_PEER_TRUSTED_CA_FILE={{ etcd_ca_file }}
ETCD_PEER_CLIENT_CERT_AUTH={{ etcd_peer_client_cert_auth | lower }}

# Performance tuning
ETCD_SNAPSHOT_COUNT={{ etcd_snapshot_count }}
ETCD_HEARTBEAT_INTERVAL={{ etcd_heartbeat_interval }}
ETCD_ELECTION_TIMEOUT={{ etcd_election_timeout }}
ETCD_QUOTA_BACKEND_BYTES={{ etcd_quota_backend_bytes }}

# Logging
ETCD_LOG_LEVEL={{ etcd_log_level }}
{% for output in etcd_log_outputs %}
ETCD_LOG_OUTPUTS={{ output }}
{% endfor %}

# Metrics
ETCD_METRICS={{ etcd_metrics }}
ETCD_LISTEN_METRICS_URLS={{ etcd_listen_metrics_urls }}
